<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-100">
  <div class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo and brand -->
      <div class="flex items-center gap-3">
        <img 
          src="/swasia/swasia-logo.png" 
          alt="Swasia Logo" 
          class="h-8 w-auto"
        />
        <span class="text-xl font-bold text-gray-900">Swasia</span>
      </div>
      
      <!-- Navigation -->
      <nav class="hidden md:flex items-center gap-8">
        <a href="#mission" class="text-gray-600 hover:text-green-600 transition-colors">Mission</a>
        <a href="#what-we-do" class="text-gray-600 hover:text-green-600 transition-colors">What We Do</a>
        <a href="#village-captains" class="text-gray-600 hover:text-green-600 transition-colors">Our Champions</a>
        <a href="#first-step" class="text-gray-600 hover:text-green-600 transition-colors">Pilot Projects</a>
        <a href="#join" class="text-gray-600 hover:text-green-600 transition-colors">Join Us</a>
      </nav>
      
      <!-- CTA Button -->
      <div class="hidden md:block">
        <a 
          href="#join" 
          class="px-6 py-2 bg-green-600 text-white rounded-full hover:bg-green-700 transition-colors text-sm font-medium"
        >
          Get Involved
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <button class="md:hidden p-2" onclick="toggleMobileMenu()">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<script>
  function toggleMobileMenu() {
    // Simple mobile menu toggle - you can enhance this later
    console.log('Mobile menu toggle');
  }
</script>

<style>
  header {
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
  }
</style>
